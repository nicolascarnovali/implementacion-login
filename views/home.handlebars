<h1>Datos Usuario</h1>
<div>
        {{#if user}}
        <h5 class="bienv">Bienvenido</h5>
        <p class="bienv">Id: {{user._id}}</p>
        <p class="bienv">Email: {{user.email}}</p>
        <p class="bienv">Nombre: {{user.first_name}}</p>
        <p class="bienv">Rol: {{user.role}}</p>
    {{/if}}
</div>
<h1>Productos</h1>
<div class="container mt-5">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
    {{#each response}}
        <div class="col mb-4">
            <div class="card h-100 bg-light">
                <div class="card-header bg-primary text-white">
                    <i class="bi bi-tag"></i> Code: {{this.code}}
                </div>
                <div class="card-body">
                    <h5 class="card-title text-white">{{this.title}}</h5>
                    <ul class="list-unstyled">

                        <li><i class="bi bi-file-text"></i> Description: {{this.description}}</li>
                        <li><i class="bi bi-currency-dollar"></i> Price: ${{this.price}}</li>
                        <li><i class="bi bi-grid"></i> Category: {{this.category}}</li>
                        <li><i class="bi bi-check-circle"></i> Status: {{this.status}}</li>
                        <li><i class="bi bi-box"></i> Stock: {{this.stock}}</li>
                        <li>
                            <i class="bi bi-image"></i> Image: <img src="{{this.thumbnail}}" alt="{{this.title}}"
                                class="mt-2 img">
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    {{else}}
        <p class="no-products">No se encontraron productos.</p>
    {{/each}}
    </div>
</div>
